<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UNO Game: <%= roomId %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/game.css">
</head>
<body>

<div class="game container-fluid py-3 py-md-4">

    <header class="text-center mb-3 mb-md-4">
        <p class="text-uppercase fw-semibold game-subtitle mb-1">Live Match</p>
        <h1 class="h3 mb-0">Room <span class="text-danger"><%= roomId %></span></h1>
    </header>
    
    <div class="game__players">
        <% if(players.length > 3) { %>
            <div class="player player--right" id="player-2">
                <div class="player__info">
                    <span class="player__name"><%= players[3] %></span>
                    <span class="player__card-count">Cards: 0</span>
                    <span class="player__uno hidden">UNO!</span>
                </div>
            </div>
        <% } %>

        <div class="player player--top" id="player-0">
            <div class="player__info">
                <span class="player__name"><%= players[0] %></span>
                <span class="player__card-count">Cards: 0</span>
                <span class="player__uno hidden">UNO!</span>
            </div>
        </div>

        <%if(players.length > 2) { %>
            <div class="player player--left" id="player-1">
                <div class="player__info">
                    <span class="player__name"><%= players[2] %></span>
                    <span class="player__card-count">Cards: 0</span>
                    <span class="player__uno hidden">UNO!</span>
                </div>
            </div>
        <% } %>

        <div class="player player--bottom player--active" id="player-3">
            <div class="player__info">
                <span class="player__name"><%= players[1] %></span>
                <span class="player__card-count">Cards: 0</span>
                <span class="player__uno hidden">UNO!</span>
            </div>
        </div>
    </div>

    <section class="game__board mx-auto">
        <div class="board__inner text-center p-3 p-md-4">
            <div class="board__direction" id="direction-indicator">-></div>

            <div class="board__elements">
                <div class="pile pile--draw" id="draw-pile">
                    <div class="card card--back">
                        <span class="card__back-logo">UNO</span>
                    </div>
                    <span class="pile__count">0</span>
                </div>
                <div class="board__message-stack">
                    <div class="board__message" id="game-message">Game Started</div>
                    <div class="board__message board__message--event" id="event-message">Waiting for actions...</div>
                </div>
                <div class="pile pile--discard" id="discard-pile">Discard</div>
            </div>
        </div>
    </section>

    <section class="game__hand mt-3 mt-md-4">
        <div class="hand__cards" id="hand-container"></div>
    </section>

    <div class="game__actions mt-3">
        <button class="btn btn--draw" id="draw-btn">Draw Card</button>
        <button class="btn btn--uno" id="uno-btn">Call UNO</button>
        <button class="btn btn--catch" id="catch-btn">Catch UNO</button>
        <button class="btn btn--exit" id="exit-btn">Exit</button>
    </div>

</div>

<div class="modal hidden" id="winner-modal">
    <div class="modal__content">
        <h2 id="winner-text" class="mb-3">Player Wins!</h2>
    </div>
</div>

<div class="modal hidden" id="wild-color-modal">
    <div class="modal__content modal__content--color">
        <div class="card card--valid card--green card--picker" id="select-green"><span class="card__picker-dot">●</span></div>
        <div class="card card--valid card--yellow card--picker" id="select-yellow"><span class="card__picker-dot">●</span></div>
        <div class="card card--valid card--red card--picker" id="select-red"><span class="card__picker-dot">●</span></div>
        <div class="card card--valid card--blue card--picker" id="select-blue"><span class="card__picker-dot">●</span></div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  const roomId = "<%= roomId %>";
</script>
<script src="/js/game.js"></script>
</body>
</html>
